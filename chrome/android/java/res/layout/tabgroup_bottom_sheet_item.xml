<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:elevation="4dp"
    android:layout_margin="8dp">
        <ImageView
            android:id="@+id/tab_favicon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:src="@color/light_grey"
            android:contentDescription="@string/clear_browsing_data_important_dialog_text"/>
        <TextView
                android:id="@+id/tab_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:ellipsize="end"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:maxLines="1"
                android:textAppearance="@style/BlackTitle2"
                android:contentDescription="@string/clear_browsing_data_important_dialog_text"/>

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:layout_gravity="end"
            android:src="@drawable/btn_delete_24dp"
            android:contentDescription="@string/clear_browsing_data_important_dialog_text"/>

        <ImageView
                android:id="@+id/tab_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:src="@color/light_grey"
                android:scaleType="centerCrop"
                android:contentDescription="@string/clear_browsing_data_important_dialog_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="@color/light_grey"/>
</android.support.v7.widget.CardView>
