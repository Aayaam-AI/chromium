<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/product_width"
    android:layout_height="@dimen/product_height"
    android:background="@color/modern_grey_50"
    android:elevation="@dimen/chip_elevation">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/product_image"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/product_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@color/modern_grey_100"
        android:textAppearance="@style/BlackTitle2"
        android:padding="8dp"
        android:maxLines="2"/>
</android.support.v7.widget.CardView>